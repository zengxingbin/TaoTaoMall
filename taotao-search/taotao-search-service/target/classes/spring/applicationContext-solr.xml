	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-4.2.xsd">
	
	<!-- 创建SolrServer -->
    <!-- 单机版 -->
    <bean class="org.apache.solr.client.solrj.impl.HttpSolrServer">
       <!-- 构造参数注入 -->
       <constructor-arg name="baseURL" value="http://192.168.19.99:8080/solr"></constructor-arg>
    </bean>
    <!-- 集群版 --><!-- 单机和集群版不能共存，因为两者都是solrServer的子类，注入时会引发不确定性，不知道注入哪个，所以会报错 -->
